    </visual>

    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
               <mesh
          filename="package://ebot_gazebo/meshes/tomato_holder1.stl" scale="0.001 0.001 0.001" />

      </geometry>
    </collision>

        <inertial>
      <mass value="0.01"/>
      <inertia ixx="3.6e-4" ixy="0" ixz="0.0" iyy="3.6e-4" iyz="0" izz="3.6e-4"/>
    </inertial>

  </link>

    <joint
    name="gripper_plam_r"
    type="fixed">
    <origin
      xyz="0.1 0.006 -0"
      rpy="-1.57 0 0" />
    <parent
      link="gripper_finger2_finger_tip_link" />
    <child
      link="tomato_gripper_r" />

  </joint>

