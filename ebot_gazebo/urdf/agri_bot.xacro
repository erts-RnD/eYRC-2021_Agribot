This urdf is optimized to work only with gazebo simulator.
(trolley and rg2 are not optimized.(meaning collision are mesh files)
-->


<robot name="agribot" xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- ebot with  gripper-->
  <xacro:include filename="$(find ebot_gazebo)/urdf/ebot_trolley_ur5.xacro" />

<!--     basket -->
<link
    name="basket">

    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>

        <mesh
          filename="package://ebot_gazebo/meshes/basket.STL" scale="0.001 0.001 0.001" />
      </geometry>

    </visual>

    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
               <mesh
          filename="package://ebot_gazebo/meshes/basket.STL" scale="0.001 0.001 0.001" />

      </geometry>
    </collision>
  </link>


    <joint
    name="ebot_basket"
    type="fixed">
    <origin
      xyz=" 0.25 -0.30 0.35"
      rpy="1.57 0 1.57" />
    <parent
      link="ebot_base" />
    <child
      link="basket" />

  </joint> 


  <!-- tomato gripper 1-->
<link
    name="tomato_gripper_l">

    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>

        <mesh
          filename="package://ebot_gazebo/meshes/tomato_holder1.stl" scale="0.001 0.001 0.001" />
      </geometry>

    </visual>

    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
               <mesh
          filename="package://ebot_gazebo/meshes/tomato_holder1.stl" scale="0.001 0.001 0.001" />

      </geometry>
    </collision>

        <inertial>
      <mass value="0.01"/>
      <inertia ixx="3.6e-4" ixy="0" ixz="0.0" iyy="3.6e-4" iyz="0" izz="3.6e-4"/>
    </inertial>



  </link>

    <joint
    name="gripper_palm_l"
    type="fixed">
    <origin
      xyz="0.1 0.006 0"
      rpy="-1.57 0 0" />
    <parent
      link="gripper_finger1_finger_tip_link" />
    <child
      link="tomato_gripper_l" />

  </joint> 

 <link
    name="tomato_gripper_r">

    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
